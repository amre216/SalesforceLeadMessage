@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-large">Learn more &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-12">
        <h2>Hi! Welcome to the salesforce message app.</h2>
        <p>
            Before you get started, you must first log in to salesforce. :)
            <hr />
            @Html.ActionLink("Login", "Index", "SalesforceLogin")
        </p>
    </div>
    <hr />

    <ul>
        <li><b>Access token: </b>@ViewBag.Token</li>
        <li><b>Api version: </b>@ViewBag.ApiVersion</li>
        <li><b>Instance Url: </b>@ViewBag.InstanceUrl</li>
    </ul>
